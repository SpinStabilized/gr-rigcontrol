<?xml version="1.0"?>
<block>
  <name>Rig Control</name>
  <key>rigcontrol_rigcontrol</key>
  <category>Rig Control</category>
  <import>import rigcontrol</import>
  <make>rigcontrol.rigcontrol(self.set_$freqvar(), self.get_$freqvar(), self.set_$pttvar(), self.get_$pttvar())</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Frequency Variable</name>
    <key>freqvar</key>
    <value></value>
    <type>string</type>
  </param>

  <param>
    <name>PTT Variable</name>
    <key>pttvar</key>
    <value></value>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
